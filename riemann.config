; -*- mode: clojure; -*-
; vim: filetype=clojure

(logging/init {:file "riemann.log"})

(let [host "127.0.0.1"]
  (tcp-server {:host host})
  (udp-server {:host host}))

(instrumentation {:enabled? false})

(periodically-expire 60)

(let [index (index)]
  (streams
    index
    (where (and (tagged "success") (not (expired? event))) prn)))
